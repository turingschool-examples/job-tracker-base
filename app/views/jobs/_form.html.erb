<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :tags %>
  <%= select_tag "tags", options_from_collection_for_select(Tag.all, 'id', 'name',@job.tags.map{ |j| j.id }), :multiple => true %>

  <%= f.submit %>
<% end %>
